@{
    ViewData["Title"] = "Employee";
}
<div class="card container my-5 py-5 z-depth-1">


    <!--Section: Content-->
    <section class="px-md-5 mx-md-5 text-center text-lg-left dark-grey-text">


        <!--Grid row-->
        <div class="row d-flex justify-content-center mb-4">

            <!--Grid column-->
            <div class="col-md-8 text-center">

                <h2 class="display-4">Welcome to Employee Page</h2>
                <h5>by Ivan R. Contrevida</h5>
                <div class="justify-content-end d-flex align-items-end">
                    <a asp-area="" asp-controller="Home" asp-action="EmployeeCreate" type="button" class="btn btn-outline-primary btn-icon-text justify-content-end align-items-end m-2">
                        <i class="mdi mdi-file-check btn-icon-prepend"></i> + ADD
                    </a>
                </div>
                @model IEnumerable<Employee>
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">Employee Id</th>
                            <th scope="col">First</th>
                            <th scope="col">Last</th>
                            <th scope="col">Birthday</th>
                            <th scope="col">Gender</th>
                            <th scope="col">Position</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in Model)
                        {
                        <tr>
                                <th scope="row">@employee.Employee_Id</th>
                            <td>@employee.First</td>
                            <td>@employee.Last</td>
                            <td>@employee.Birthday</td>
                            <td>@employee.Gender</td>
                            <td>@employee.Position</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@employee.Employee_Id" type="button" class="btn btn-outline-info btn-icon-text">
                                    <i class="mdi mdi-file-check btn-icon-prepend"></i> Update
                                </a>
                                <a asp-action="Delete" asp-route-id="@employee.Employee_Id" type="button" class="btn btn-outline-danger btn-icon-text">
                                    <i class="mdi mdi-alert btn-icon-prepend"></i> Delete
                                </a>
                            </td>
                        </tr>
                      }
                    </tbody>
                </table>

            </div>
            <!--Grid column-->

        </div>
        <!--Grid row-->


    </section>
    <!--Section: Content-->


</div>