    </div>
    <div class="form-group">
        <label asp-for="Last_Name" class="control-label"></label>
        <input asp-for="Last_Name" readonly class="form-control" />
        <span asp-validation-for="Last_Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Mobile" class="control-label"></label>
        <input asp-for="Mobile" readonly class="form-control" />
        <span asp-validation-for="Mobile" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" readonly class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for=" Email_Account" class="control-label"></label>
        <input asp-for=" Email_Account" readonly class="form-control" />
        <span asp-validation-for=" Email_Account" class="text-danger"></span>
    </div>
