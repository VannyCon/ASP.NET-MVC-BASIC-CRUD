@{
    ViewData["Title"] = "Departement";
}

<div class="card container my-5 py-5 z-depth-1">


    <!--Section: Content-->
    <section class="px-md-5 mx-md-5 text-center text-lg-left dark-grey-text">


        <!--Grid row-->
        <div class="row d-flex justify-content-center mb-4">

            <!--Grid column-->
            <div class="col-md-10 text-center">

                <h2 class="display-4">Welcome to Departement Page</h2>
                <h5>by Ivan R. Contrevida</h5>
                <div class="justify-content-end d-flex align-items-end">
                    <a type="button" class="btn btn-outline-primary btn-icon-text justify-content-end align-items-end m-2">
                        <i class="mdi mdi-file-check btn-icon-prepend"></i> + ADD
                    </a>
                </div>
                @model IEnumerable<Department>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">Department Id</th>
                            <th scope="col">Name</th>
                            <th scope="col">Manager</th>
                            <th scope="col">Location</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var dept in Model){
                        <tr>
                                <th scope="row">@dept.Department_Id</th>
                                <td>@dept.Name</td>
                                <td>@dept.Manager</td>
                                <td>@dept.Location</td>
                                <td>
                                    <a type="button" class="btn btn-outline-info btn-icon-text">
                                        <i class="mdi mdi-file-check btn-icon-prepend"></i> Update
                                    </a>
                                    <button type="button" class="btn btn-outline-danger btn-icon-text" data-toggle="modal" data-target="#deleteModal">
                                        <i class="mdi mdi-alert btn-icon-prepend"></i> Delete
                                    </button>
                                </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!--Grid column-->

        </div>
        <!--Grid row-->


    </section>
    <!--Section: Content-->
</div>
