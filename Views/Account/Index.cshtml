@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Login</div>
                <div class="card-body">
                    <!-- Views/Login/Index.cshtml -->
                    <form method="post" asp-controller="Account" asp-action="Index">
                        <div class="form-group">
                            <label for="Email_Account">Email</label>
                            <input type="email" class="form-control" id="Email_Account" name="Email_Account" placeholder="Enter your email" required>
                        </div>
                        <div class="form-group">
                            <label for="Password">Password</label>
                            <input type="password" class="form-control" id="Password" name="Password" placeholder="Enter Password" required>
                        </div>
                        <button type="submit" value="Login" class="btn btn-primary mr-2 mt-2 d-block">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
