<!-- _DeleteConfirmation.cshtml -->
@model Employee

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="rounded-3 secondarColor p-5">
                <div class="card-header">
                    <div class="text-left">
                        <h1 class="text-500">Delete Employee</h1>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-controller="Employee" asp-action="DeleteConfirmed" asp-route-id="@Model.Employee_Id" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="text" readonly asp-for="Employee_Id" class="myInput white-white p-4" />
                        <label asp-for="First" class="fw-light white-muted m-0">First</label>
                        <div class="form-outline form-group mb-3">
                            <input asp-for="First" type="text" readonly name="First" id="form2Example11" class="myInput white-white p-4" />
                            <span asp-validation-for="First" class="text-danger"></span>
                        </div>

                        <label asp-for="Last" class="fw-light white-muted m-0">Last</label>
                        <div class="form-outline form-group mb-3">
                            <input asp-for="Last" type="text" readonly name="Last" id="form2Example11" class="myInput white-white p-4" />
                            <span asp-validation-for="Last" class="text-danger"></span>
                        </div>

                        <label asp-for="Birthday" class="fw-light white-muted m-0">Birthday</label>
                        <div class="form-outline form-group mb-3">
                            <input asp-for="Birthday" type="date" readonly name="Birthday" id="form2Example11" class="myInput white-white p-4" />
                            <span asp-validation-for="Birthday" class="text-danger"></span>
                        </div>

                        <label asp-for="Gender" class="fw-light white-muted m-0">Gender</label>
                        <div class="form-outline form-group mb-3">
                            <input asp-for="Gender" type="text" readonly name="Gender" id="form2Example11" class="myInput white-white p-4" />
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>

                        <label asp-for="Position" class="fw-light white-muted m-0">Position</label>
                        <div class="form-outline form-group mb-3">
                            <input asp-for="Position" type="text" readonly name="Position" id="form2Example11" class="myInput white-white p-4" />
                            <span asp-validation-for="Position" class="text-danger"></span>
                        </div>

                        <div class="text-left pt-1 mb-5 pb-1">
                            <button class="button-full d-block mb-2 text-center p-3" type="submit">Delete</button>
                        </div>
                    </form>
                    <a id="departmentLink" class="text-white text-decoration-none" asp-area="" asp-controller="Employee" asp-action="Employee">← Go Back</a>
                </div>
            </div>
        </div>
    </div>
</div>